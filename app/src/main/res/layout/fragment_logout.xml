<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logout_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".ui.logout.LogoutFragment">

    <TextView
        android:id="@+id/tvConfirmacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¿Estás seguro de que querés cerrar sesión?"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btSi"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btSi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sí, cerrar sesión"
        android:backgroundTint="#E53935"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btNo" />

    <Button
        android:id="@+id/btNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:backgroundTint="#9E9E9E"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

